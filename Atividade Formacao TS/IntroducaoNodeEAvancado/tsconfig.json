{
  "compilerOptions": {
    // ==== Diretórios ====
    "rootDir": "./src",
    "outDir": "./build",

    // ==== Ambiente Node (CommonJS) ====
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "types": [],

    // ==== Suporte a Decorators ====
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // ==== Suporte a JavaScript ====
    "allowJs": true,

    // ==== Saída ====
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // ==== Facilita import/export ====
    "esModuleInterop": true,

    // ==== Type Checking ====
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
